@model List< POE_Project.Models.Claim>
@{
    ViewData["Title"] = "Manager - Approve Claims";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Manager Dashboard - Final Approval</h2>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">No claims available.</p>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Claim ID</th>
                    <th>Hours</th>
                    <th>Rate</th>
                    <th>Total</th>
                    <th>Notes</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.ClaimID</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate</td>
                        <td>R @claim.TotalAmount</td>
                        <td>@claim.Notes</td>
                        <td>
                            @if (claim.Status == "Approved")
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else if (claim.Status == "Rejected")
                            {
                                <span class="badge bg-danger">Rejected</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">@claim.Status</span>
                            }
                        </td>
                        <td>
                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@claim.ClaimID" />
                                <input type="hidden" name="status" value="Approved" />
                                <button type="submit" class="btn btn-success btn-sm">Approve</button>
                            </form>

                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@claim.ClaimID" />
                                <input type="hidden" name="status" value="Rejected" />
                                <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
