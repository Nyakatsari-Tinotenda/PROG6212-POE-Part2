@model List<POE_Project.Models.Claim>

@{
    ViewData["Title"] = "Claim Status Tracking";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Claim Status Tracking</h2>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">No claims found.</p>
    }
    else
    {
        <div class="row">
            @foreach (var claim in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title">Claim #@claim.ClaimID</h5>
                                <span class="badge @(claim.Status == "Approved" ? "bg-success" : claim.Status == "Rejected" ? "bg-danger" : "bg-warning")">
                                    @claim.Status
                                </span>
                            </div>

                            <div class="mb-2">
                                <strong>Lecturer:</strong> @(claim.Lecturer?.Name ?? "N/A")
                            </div>

                            <div class="row mb-2">
                                <div class="col-4">
                                    <strong>Hours:</strong><br>
                                    @claim.HoursWorked
                                </div>
                                <div class="col-4">
                                    <strong>Rate:</strong><br>
                                    R @claim.HourlyRate
                                </div>
                                <div class="col-4">
                                    <strong>Total:</strong><br>
                                    @String.Format("R {0:F2}", claim.TotalAmount)
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(claim.Notes))
                            {
                                <div class="mb-2">
                                    <strong>Notes:</strong><br>
                                    <span class="text-muted">@claim.Notes</span>
                                </div>
                            }

                            <div class="mb-2">
                                <strong>Documents:</strong>
                                @if (claim.Documents?.Any() == true)
                                {
                                    <ul class="mb-0 mt-1">
                                        @foreach (var doc in claim.Documents)
                                        {
                                            <li>
                                                <a target="_blank" href="~/uploads/@doc.StoredFileName" class="text-decoration-none">
                                                    @doc.FileName
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <br>
                                    <span class="text-muted">No documents attached</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>