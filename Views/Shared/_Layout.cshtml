<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS Prototype</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3a0ca3;
            --accent-color: #4cc9f0;
            --success-color: #06d6a0;
            --warning-color: #ffd166;
            --danger-color: #ef476f;
            --light-bg: #f8f9ff;
            --dark-text: #2b2d42;
            --light-text: #8d99ae;
            --card-bg: #ffffff;
            --shadow: 0 8px 20px rgba(67, 97, 238, 0.12);
            --shadow-hover: 0 12px 30px rgba(67, 97, 238, 0.18);
        }

        body {
            font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
            background: linear-gradient(135deg, #f5f7ff 0%, #f0f4ff 100%);
            color: var(--dark-text);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            line-height: 1.6;
        }

        .navbar {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)) !important;
            box-shadow: var(--shadow);
            padding: 0.5rem 0;
            border-bottom: 3px solid var(--accent-color);
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 1.8rem;
            display: flex;
            align-items: center;
            gap: 12px;
            letter-spacing: -0.5px;
        }

            .navbar-brand i {
                color: var(--accent-color);
                font-size: 1.9rem;
            }

        .nav-link {
            font-weight: 600;
            padding: 0.7rem 1.2rem !important;
            margin: 0 0.3rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 1.05rem;
        }

            .nav-link:hover {
                background-color: rgba(255, 255, 255, 0.15);
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            }

            .nav-link.active {
                background-color: var(--accent-color);
                color: white !important;
                box-shadow: 0 5px 15px rgba(76, 201, 240, 0.4);
            }

        .main-container {
            flex: 1;
            padding: 2.5rem 0;
        }

        .page-header {
            margin-bottom: 2.5rem;
            padding-bottom: 1.5rem;
            border-bottom: 2px solid rgba(67, 97, 238, 0.1);
            text-align: center;
        }

        .page-title {
            color: var(--secondary-color);
            font-weight: 800;
            margin-bottom: 0.8rem;
            font-size: 2.8rem;
            letter-spacing: -1px;
        }

        .page-subtitle {
            color: var(--light-text);
            font-size: 1.3rem;
            max-width: 700px;
            margin: 0 auto;
        }

        .card {
            border: none;
            border-radius: 16px;
            box-shadow: var(--shadow);
            transition: all 0.4s ease;
            margin-bottom: 2rem;
            background: var(--card-bg);
            overflow: hidden;
        }

            .card:hover {
                transform: translateY(-8px);
                box-shadow: var(--shadow-hover);
            }

        .card-header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            border-bottom: none;
            font-weight: 700;
            padding: 1.5rem 2rem;
            font-size: 1.3rem;
        }

        .card-body {
            padding: 2rem;
        }

        footer {
            background: linear-gradient(135deg, var(--secondary-color), #2a0a7a);
            color: white;
            padding: 2rem 0;
            margin-top: auto;
            border-top: 3px solid var(--accent-color);
        }

        .footer-links a {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            transition: color 0.3s ease;
            font-weight: 500;
        }

            .footer-links a:hover {
                color: var(--accent-color);
            }

        .user-info {
            display: flex;
            align-items: center;
            gap: 12px;
            color: rgba(255, 255, 255, 0.9);
            background: rgba(255, 255, 255, 0.1);
            padding: 0.5rem 1rem;
            border-radius: 50px;
            backdrop-filter: blur(10px);
        }

        .user-avatar {
            width: 42px;
            height: 42px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--accent-color), var(--primary-color));
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            color: white;
            font-size: 1.1rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin: 2rem 0;
        }

        .stat-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: var(--shadow);
            text-align: center;
            transition: transform 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-5px);
            }

        .stat-value {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }

        .stat-label {
            color: var(--light-text);
            font-weight: 600;
            font-size: 1rem;
        }

        .btn-custom {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            border: none;
            border-radius: 10px;
            padding: 0.8rem 1.8rem;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 10px rgba(67, 97, 238, 0.3);
        }

            .btn-custom:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 15px rgba(67, 97, 238, 0.4);
                color: white;
            }

        /* Mobile styles */
        @@media (max-width: 768px) {
            .navbar-nav {
                padding: 1rem 0;
            }

            .nav-link {
                margin: 0.3rem 0;
                justify-content: center;
            }

            .user-info span {
                display: none;
            }

            .page-title {
                font-size: 2.2rem;
            }

            .page-subtitle {
                font-size: 1.1rem;
            }

            .main-container {
                padding: 1.5rem 0;
            }

            .card-body {
                padding: 1.5rem;
            }
        }

        /* Small screen styles */
        @@media (max-width: 576px) {
            .page-title {
                font-size: 1.8rem;
            }

            .page-subtitle {
                font-size: 1rem;
            }

            .main-container {
                padding: 1rem 0;
            }

            .navbar-brand {
                font-size: 1.5rem;
            }

                .navbar-brand i {
                    font-size: 1.6rem;
                }

            .stats-container {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">
                <i class="fas fa-graduation-cap"></i>
                CMCS
            </a>

            <div class="d-flex align-items-center order-lg-3 ms-auto">
                <div class="user-info me-3">
                    <div class="user-avatar">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @User.Identity.Name?[0].ToString().ToUpper()
                        }
                        else
                        {
                            @:GU
                        }
                    </div>
                    <span class="d-none d-md-inline">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @User.Identity.Name
                        }
                        else
                        {
                            @:Guest User
                        }
                    </span>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>

            <div class="collapse navbar-collapse order-lg-2" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <!-- Role-based navigation -->
                    @if (User.IsInRole("Lecturer"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Lecturer">
                                <i class="fas fa-chalkboard-teacher"></i>
                                Lecturer
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("Coordinator"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Coordinator">
                                <i class="fas fa-tasks"></i>
                                Coordinator
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("Manager"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Manager">
                                <i class="fas fa-user-tie"></i>
                                Manager
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("HR"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="HR">
                                <i class="fas fa-users"></i>
                                HR
                            </a>
                        </li>
                    }

                    <!-- Status page - available to all authenticated users -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Status">
                                <i class="fas fa-chart-line"></i>
                                Status
                            </a>
                        </li>
                    }

                    <!-- Login/Logout links -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post"
                                  asp-route-returnUrl="@Url.Action("Index", "Home")">
                                <button type="submit" class="nav-link btn btn-link"
                                        style="border: none; background: none;">
                                    <i class="fas fa-sign-out-alt"></i>
                                    Logout
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                                <i class="fas fa-sign-in-alt"></i>
                                Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="main-container">
        <div class="container">
            <!-- Page Header -->
            <div class="page-header">
                <h1 class="page-title">@ViewData["Title"]</h1>
                <p class="page-subtitle">Course Management and Coordination System - Streamlining academic processes</p>
            </div>

            <!-- Demo Login Credentials - Show when user is not authenticated -->
            @if (!User.Identity.IsAuthenticated)
            {
                <div class="card shadow p-4 mt-4">
                    <h3 class="mb-3">Demo Login Credentials</h3>
                    <p class="text-muted">Use these accounts to log into the system:</p>

                    <table class="table table-bordered table-striped text-center">
                        <thead class="table-primary">
                            <tr>
                                <th>Role</th>
                                <th>Email</th>
                                <th>Password</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Lecturer</td>
                                <td>lecturer@poe.com</td>
                                <td>Password123!</td>
                            </tr>
                            <tr>
                                <td>Coordinator</td>
                                <td>coordinator@poe.com</td>
                                <td>Password123!</td>
                            </tr>
                            <tr>
                                <td>Manager</td>
                                <td>manager@poe.com</td>
                                <td>Password123!</td>
                            </tr>
                            <tr>
                                <td>HR</td>
                                <td>hr@poe.com</td>
                                <td>Password123!</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            }

            <!-- Stats Preview -->
            <div class="stats-container">
                <div class="stat-card">
                    <div class="stat-value">142</div>
                    <div class="stat-label">Active Courses</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">28</div>
                    <div class="stat-label">Teaching Staff</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">96%</div>
                    <div class="stat-label">Satisfaction Rate</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">12</div>
                    <div class="stat-label">Departments</div>
                </div>
            </div>

            <!-- Main Content -->
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2023 CMCS Prototype. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end footer-links">
                    <a href="#" class="me-3">Privacy Policy</a>
                    <a href="#" class="me-3">Terms of Service</a>
                    <a href="#">Contact Support</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Scripts section renderer -->
    @RenderSection("Scripts", required: false)

    <script>
        // Add active class to current page in navigation
        document.addEventListener('DOMContentLoaded', function() {
            const currentLocation = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');

            navLinks.forEach(link => {
                if(link.getAttribute('href') === currentLocation) {
                    link.classList.add('active');
                }
            });
        });
    </script>
</body>
</html>